<%- include('../partials/header') %>
<table id="list">
  <thead>
    <h2>Recipe Book</h2>
    <tr>
      <th>Title</th>
      <th>Cook Time</th>
      <th>GF</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r) { %>
      <tr>
        <td><%= r.title %></td>
        <td>(hrs): <%= r.hours %> (mins): <%= r.mins %></td>
        <td><%= r.glutenFree %></td>
        <td><%= r.date.toLocaleDateString() %></td>
        <td><a href="/recipes/<%= r._id %>">Details</a></td>
        <td><a href="/recipes/<%= r._id %>/edit">Edit</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>