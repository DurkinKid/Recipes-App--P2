<%- include('../partials/header') %>
<table id="list">
  <thead>
    <h2>Recipe Book</h2>
    <tr>
      <th>Title</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Cook Time</th>
      <th>Gluten Free?</th>
      <th>Critiques</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r) { %>
      <tr>
        <td><%= r.title %></td>
        <td><%= r.ingredients %></td>
        <td><%= r.instructions %></td>
        <td><%= r.cookTime %></td>
        <td><%= r.glutenFree %></td>
        <td><a href="/recipes/<%= r._id %>">Critiques</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>