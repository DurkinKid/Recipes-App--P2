<%- include('../partials/header') %>

<form id="new-form" action="/recipes" method="POST">
    <label>Title: </label>
    <input type="text" name="title">

    <label>Ingredients: </label>
    <textarea type="text" name="ingredients" placeholder="Ingredients"></textarea><br>

    <label>Instructions:</label>
    <textarea type="text" name="instructions" placeholder="Instructions"></textarea><br>

    <label>Cook Time</label>
    <label>Hours: </label>
    <input type="number" min="0" max="500" name="hours">
    <label>Mins: </label>
    <input type="number" min="1" max="500" name="mins">

    <label>Gluten-Free: 
    <label for="true">(T)</label>
    <input value=true type="radio" name="glutenFree">
    <label for="false">(F)</label>
    <input value=false type="radio" name="glutenFree">
    </label>

    <input type="submit" value="Add Recipe">
</form>

<%- include('../partials/footer') %>